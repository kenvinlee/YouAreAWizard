/*
 * You need to create a system that goes through all cooldowns, ticks them,
 * and then modifies the spells that they correspond to by making them 
 * usable or unusable
 */

public class Cooldown extends Component
{
	private int timer;
	private boolean used;
	
	public Cooldown()
	{
		used = false;
	}
	
	public void setCD(int CD)
	{
		CD = timer;
	}
	
	public void beenUsed()
	{
		used = true;
	}
	
}
