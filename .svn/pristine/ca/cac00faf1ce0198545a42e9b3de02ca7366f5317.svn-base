package gamestates;

import main.YouAreAWizard;

import org.lwjgl.input.Keyboard;
import org.newdawn.slick.GameContainer;
import org.newdawn.slick.Graphics;
import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.state.BasicGameState;
import org.newdawn.slick.state.StateBasedGame;

public class MainMenuState extends BasicGameState
{
        private int stateID = -1;
		private StateBasedGame sbg;
		private GameContainer gc;

		private Image backgroundImg;
		private Image menuButton;
		private Image selectedButton;
		private Image title;
		
		private int[] buttonX;
		private int[] buttonY;
		private int titleX;
		private int titleY;
		
        public MainMenuState(int stateID)
        {
                this.stateID = stateID;
        }

        @Override
        public int getID()
        {
                return stateID;
        }
        
        
        public void init(GameContainer gc, StateBasedGame sbg) throws SlickException
        {
               menuButton = new Image("Data/HUD/menuButton.png");
               selectedButton = new Image ("Data/HUD/highlightedButton.png");
               title = new Image("Data/HUD/title.png");
               
               buttonX = new int[4];
               buttonY = new int[4];
        }
        
        public void render(GameContainer gc, StateBasedGame sbg, Graphics g) throws SlickException
        {
              title.draw(230, 30);
              
              
        }
        
        public void update(GameContainer gc, StateBasedGame sbg, int delta) throws SlickException
        {
        }

        @Override
        public void mouseClicked(int button, int x, int y, int clickCount)
        {
                super.mouseClicked(button, x, y, clickCount);

               
        }

        @Override
        public void keyPressed(int key, char c)
        {
              
        }

        protected void playGame()
        {
                sbg.enterState(YouAreAWizard.GAMEPLAYSTATE);
        }

        protected void exitGame()
        {
                gc.exit();
        }
}