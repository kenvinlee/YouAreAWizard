package components;

import com.artemis.Component;
import java.util.*;
import org.newdawn.slick.Image;
import org.newdawn.slick.SlickException;

/* sprite method parameter access words
 * wiz
 * spell
 * sword
 * bow
 * troll
 * golem
 * gate
 * drag
 * */
public class SpriteSheet extends Component
{
	ArrayList<Image> wizardMove;
	ArrayList<Image> spells;
	ArrayList<Image> swordSkelMove;
	ArrayList<Image> bowSkelMove;
	ArrayList<Image> trollMove;
	ArrayList<Image> golemMove;
	ArrayList<Image> gatekeeperMove;
	ArrayList<Image> dragonMove;
	
	//Fill in all of the variables and access methods a spritesheet would need
	public SpriteSheet(String s, String object) throws SlickException
	{
		wizardMove = new ArrayList<Image>(5);
		spells = new ArrayList<Image>(0);
		swordSkelMove = new ArrayList<Image>(0);
		bowSkelMove = new ArrayList<Image>(0);
		trollMove = new ArrayList<Image>(0);
		golemMove = new ArrayList<Image>(0);
		gatekeeperMove = new ArrayList<Image>(0);
		dragonMove = new ArrayList<Image>(0);

		if (object.equalsIgnoreCase("wiz"))
			wizardMove.add(new Image(s));
		if (object.equalsIgnoreCase("spell"))
			spells.add(new Image(s));
		if (object.equalsIgnoreCase("sword"))
			swordSkelMove.add(new Image(s));
		if (object.equalsIgnoreCase("bow"))
			bowSkelMove.add(new Image(s));
		if (object.equalsIgnoreCase("troll"))
			trollMove.add(new Image(s));
		if (object.equalsIgnoreCase("golem"))
			golemMove.add(new Image(s));
		if (object.equalsIgnoreCase("gate"))
			gatekeeperMove.add(new Image(s));
		if (object.equalsIgnoreCase("drag"))
			dragonMove.add(new Image(s));
		
	}
	
	public ArrayList<Image> getImages(String object)
	{
		if (object.equalsIgnoreCase("wiz"))
			return wizardMove;
		else if (object.equalsIgnoreCase("spell"))
			return spells;
		else if (object.equalsIgnoreCase("sword"))
			return swordSkelMove;
		else if (object.equalsIgnoreCase("bow"))
			return bowSkelMove;
		else if (object.equalsIgnoreCase("troll"))
			return trollMove;
		else if (object.equalsIgnoreCase("golem"))
			return golemMove;
		else if (object.equalsIgnoreCase("gate"))
			return gatekeeperMove;
		else if (object.equalsIgnoreCase("drag"))
			return dragonMove;
		else
		return null;
	}
}
