package components;
import java.util.Random;
import com.artemis.Component;

public class Inventory extends Component
{
	private int fire, water, lightning;
	
	public Inventory()
	{
		fire = 3;
		water = 3;
		lightning = 3; 
	}
	
	public void monsterLoot()
	{
		int item, quant;
		Random r = new Random();
		item = r.nextInt(3);
		
		//quant is essentially droprate. Might need to tweak.
		quant = r.nextInt(4);
		
		if (item == 0)
			fire = quant;
		else if (item == 1)
			water = quant;
		else if (item == 2)
			lightning = quant;
		
	}
	
	public int returnFireScroll()
	{
		return fire;
	}
	public int returnWaterScroll()
	{
		return water;
	}
	public int returnLightningScroll()
	{
		return lightning;
	}
}
